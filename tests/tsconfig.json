{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@core/*": [
                "packages/core/src/*"
            ],
            "@shared/*": [
                "packages/shared/*"
            ]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "types": [
            "vitest/globals",
            "node"
        ],
        "noEmit": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "**/*.ts",
        "../vitest.config.ts"
    ]
}